@model IEnumerable<FvpWebAppModels.Models.Target>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descryption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatabaseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatabaseAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatabaseUsername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatabasePassword)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descryption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatabaseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatabaseAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatabaseUsername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatabasePassword)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TargetId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TargetId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TargetId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
