@model IEnumerable<FvpWebAppModels.Models.AccountingRecord>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RecordOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DebitCredit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sign)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RecordOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DebitCredit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sign)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AccountingRecordId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AccountingRecordId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AccountingRecordId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
